<div id="fb-root"></div>

<script src="//connect.facebook.net/en_US/all.js"></script>
<script type="text/javascript">

  $(document).ready(function(){
    $("#sign_in").click(function(e){
      
    var appid = '<%= Facebook::APP_ID %>';
    var redirect_uri = '<%= serversidesuccess_url %>';
    var path = "https://www.facebook.com/dialog/oauth?client_id=" + appid + "&redirect_uri=" + redirect_uri + "&state=1234567&display=popup";

     window.open(path, '', 'width=600,height=800');
    });
  });
  
</script>

<a href="" id="sign_in">Sign in - Server side</a>